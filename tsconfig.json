{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",                // ðŸ‘ˆ Required
    "paths": {
      "@/*": ["src/*"]            // ðŸ‘ˆ This maps @ to /src
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "src",
    "**/*.tsx",
    "vite.config.ts",
    "src/types/fixed/strategyTypes.ts" // Ensure this file is included
  ]
}
